.chat-main
  .header-list
    .header-list__leftbox
      %p.header-list__leftbox__current-group
        =@group.name
      %ul.header-list__leftbox__member-list
        Member :
        %li.header-list__leftbox__member-list__member
          - @group.users.each do |user|
            =user.name
    =link_to edit_group_path(@group) do
      .header-list__edit-btn
        Edit
  .main
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'form__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

