.main__message-list{data: {message: {id: message.id}}}
  .main__message-list__header
    %p.main__message-list__header__name
      = message.user.name
    %p.main__message-list__header__date
      = message.created_at
  .main__message-list__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?